    <script>
        document.addEventListener("DOMContentLoaded", function() {
            let timeSlots = []
            let counter = 0
            // adding new row to the table
            function addTableRow(startingTime, endingTime, cash) {
                let newRow = document.createElement("tr");
                newRow.setAttribute("id", "row_" + counter);
                newRow.innerHTML = `
                    <td>${startingTime}</td>
                    <td>${endingTime}</td>
                    <td>${cash}</td>
                    <td><button onclick="deleteRow(${counter})">Delete</button></td>
                `;
                document.getElementById("timeTableBody").appendChild(newRow);
                counter++;
            }

            // Deleting a row
            window.deleteRow = function(rowId) {
                let rowToRemove = document.getElementById("row_" + rowId);
                rowToRemove.remove();
                timeSlots.splice(rowId, 1);
            };

            // Click add time button
            document.getElementById("addTimeButton").addEventListener("click", function() {
                let startingTime = document.getElementById("startingTime").value;
                let endingTime = document.getElementById("endingTime").value;
                let cash = document.getElementById("cash").value;
                let date = document.getElementById("date").value;

                if (startingTime && endingTime && cash && date) {
                    addTableRow(startingTime, endingTime, cash);
                    // After click clear all fields
                    document.getElementById("startingTime").value = '';
                    document.getElementById("endingTime").value = '';
                    document.getElementById("cash").value = '';
                } else {
                    alert("Please fill in all fields.");
                }
            });

            // Click upload button
            document.getElementById("uploadButton").addEventListener("click", function() {
                // Find Court with courtId
                let courtId = document.getElementById("courtId").textContent;

                // Collect existing time slots from the table
                let existingTimeSlots = [];
                let tableRows = document.getElementById("timeTableBody").getElementsByTagName("tr");
                for (let i = 0; i < tableRows.length; i++) {
                    let cells = tableRows[i].getElementsByTagName("td");
                    let startingTime = cells[0].innerText;
                    let endingTime = cells[1].innerText;
                    let cash = cells[2].innerText;
                    existingTimeSlots.push({ startingTime, endingTime, cash });
                }

                // Combine existing and new time slots
                let allTimeSlots = existingTimeSlots.concat(timeSlots);
                let date = document.getElementById("date").value;
                
                // Send timeSlots to backend
                fetch(`/saveTimeSlots-specificDate?_id=${courtId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ 
                        timeSlots: allTimeSlots,
                        date: date
                    })                
                })
                .then(response => {
                    if (response.ok) {
                        console.log('Time slots saved successfully.');
                        // Clear the table
                        // document.getElementById("timeTableBody").innerHTML = "";
                        // Reset the timeSlots array
                        timeSlots = [];
                        // Reset the counter
                        counter = 0;
                        if(date == ''){
                            document.getElementById("message").innerHTML = "Select a date";
                        } else {
                            document.getElementById("message").innerHTML = "Time added";
                        }
                    } else {
                        console.error('Failed to save time slots.');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                });
            });
        });


    </script>
    

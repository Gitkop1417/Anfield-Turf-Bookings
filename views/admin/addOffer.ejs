                </div>
            </nav>
        </div>
        <!-- Sidebar End -->

        <!-- Content Start -->
        <div class="content">
            <!-- Navbar Start -->
            <nav class="navbar navbar-expand bg-secondary navbar-dark sticky-top px-4 py-0">
                <div class="navbar-nav align-items-center ms-auto">
                    <div class="nav-item dropdown">
                        <a href="/admin-logout" class="nav-link">
                            <i class="fa fa-sign-out-alt me-lg-2"></i>
                            <span class="d-none d-lg-inline-flex">Logout</span>
                        </a>
                    </div>
                </div>
            </nav>
            <!-- Navbar End -->


            <!-- Form Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <div class="col-sm-12 col-xl-6">
                        <div class="bg-secondary rounded h-100 p-4">
                            <h6 class="mb-4">Add new offer</h6>
                            <form id="form">
                                <p style="display: none;" id="id"></p>
                                <div class="mb-3">
                                    <label for="" class="form-label">Offer name</label>
                                    <input type="name" class="form-control" id="name">
                                    <!-- <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div> -->
                                </div>
                                <div class="mb-3">
                                    <label for="" class="form-label">Offer Percentage</label>
                                    <input type="number" class="form-control" id="percentage">
                                </div>
                                <div class="mb-3">
                                    <label for="" class="form-label">Offer type</label>
                                    <select id="selection" class="form-select form-select-sm mb-3" aria-label=".form-select-sm example">
                                        <!-- <option selected>Select a type</option> -->
                                        <option value="Turf">Turf</option>
                                        <option value="Category">Category</option>
                                    </select>
                                </div>

                                <div style="display: none;" id="turfSelection" class="mb-3">
                                    <label for="" class="form-label">Select turf</label>
                                    <select id="turfId" class="form-select form-select-sm mb-3" aria-label=".form-select-sm example">
                                        <% for(let i = 0; i < turfs.length; i++){ %>
                                            <option value="<%= turfs[i]._id %>"><%= turfs[i].name %> <%= turfs[i].court %> turf <%= turfs[i].city %></option>
                                        <% } %>
                                    </select>
                                </div>

                                <div id="courtSelection" style="display: none;" class="mb-3">
                                    <label for="" class="form-label">Select court</label>
                                    <select id="categoryId" class="form-select form-select-sm mb-3" aria-label=".form-select-sm example">
                                        <% for(let i = 0; i < categories.length; i++){ %>
                                            <option value="<%= categories[i]._id %>"><%= categories[i].name %></option>
                                        <% } %>
                                    </select>
                                </div>
                                
                                <div class="mb-3">
                                    <label for="" class="form-label">Offer Expiry date</label>
                                    <input type="date" class="form-control" id="date">
                                </div>
                                <div style="height: 10px;">
                                    <p id="message" style="color: red;font-size: 20px;"></p>
                                </div>
                                <br>
                                <button class="btn btn-primary">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    <!-- JavaScript Libraries -->
    <script>
            let form = document.getElementById('form')
            form.addEventListener('submit',(event)=>{
                event.preventDefault()

                const categoryOption = document.getElementById('categoryId').options[document.getElementById('categoryId').selectedIndex];
                const categoryName = categoryOption.text;
                const turfOption = document.getElementById('turfId').options[document.getElementById('turfId').selectedIndex];
                const turfName = turfOption.text;

                const name = document.getElementById('name').value
                const percentage = document.getElementById('percentage').value
                const date = document.getElementById('date').value
                const type = document.getElementById('selection').value
                const turfId = document.getElementById('turfId').value
                const categoryId = document.getElementById('categoryId').value
                
                let typeId;
                let typeName;
                
                if(type === 'Turf') {
                    typeId = turfId
                    typeName = turfName
                } else {
                    typeId = categoryId
                    typeName = categoryName
                }
                // const id = document.getElementById('id').innerHTML
                console.log(typeId)
                fetch(`/admin-checkOffer?name=${name}&&percentage=${percentage}&&expiredAt=${date}&&type=${type}&&typeId=${typeId}&&typeName=${typeName}`)
                .then(res => res.json())
                .then(data => {
                    if(data.success) {
                        window.location.href=`/admin-offer-checkSuccess?data=${encodeURIComponent(JSON.stringify(data.data))}`
                    } else if(data.message) {
                        document.getElementById('message').innerHTML=data.message
                        function hideParagraph() {
                            document.getElementById('message').innerHTML = ''
                        }
                        setTimeout(hideParagraph, 3000)
                        console.log(data.message)
                    }
                })

            })
    </script>



    <script>
        // Get references to HTML elements
        var selection = document.getElementById("selection");
        const courtSelectionDiv = document.getElementById("courtSelection");
        const turfSelectionDiv = document.getElementById("turfSelection");

        // Function to update content based on selection
        function updateContent() {
        const selectedValue = selection.value;
        
        // Add new content based on selection
        if (selectedValue === "Turf") {
            turfSelectionDiv.style.display = "block";
            courtSelectionDiv.style.display = "none";
        } else if (selectedValue === "Category") {
            courtSelectionDiv.style.display = "block";
            turfSelectionDiv.style.display = "none";
        } 
        }
        // Add event listener to detect changes in selection
        selection.addEventListener("change", updateContent);
        // Call updateContent initially to display default content
        updateContent();
    </script>


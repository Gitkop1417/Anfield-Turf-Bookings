                            <span class="d-none d-lg-inline-flex">Logout</span>
                        </a>
                    </div>
                </div>
            </nav>
            <!-- Navbar End -->


            <!-- Form Start -->
            <h1 style="color: white; text-align: center; padding: 30px;">Coupons</h1>

            <div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    
                    <div class="col-sm-12 col-xl-6">
                        <div class="bg-secondary rounded h-100 p-4">
                            <h6 class="mb-4">Add coupons</h6>
                            <form id="form">
                                <p style="display: none;" id="id"><%= coupon._id %></p>
                                <div class="mb-3">
                                    <label for="" class="form-label">Coupon name</label>
                                    <input type="name" value="<%= coupon.name %>" class="form-control" id="name">
                                </div>
                                <div class="mb-3">
                                    <label for="" class="form-label">Percentage</label>
                                    <input type="number" value="<%= coupon.percentage %>" class="form-control" id="percentage">
                                </div>
                                <div class="mb-3">
                                    <label for="" class="form-label">Expiry date</label>
                                    <input type="date" value="<%= expireDate %>" class="form-control" id="date">
                                </div>
                                <div class="mb-3">
                                    <label for="" class="form-label">Minimum amount</label>
                                    <input type="number" value="<%= coupon.minAmount %>" class="form-control" id="minAmount">
                                </div>
                                <div class="mb-3">
                                    <label for="" class="form-label">Maximum amount</label>
                                    <input type="number" value="<%= coupon.maxAmount %>" class="form-control" id="maxAmount">
                                </div>
                                <div class="form-floating">
                                    <textarea class="form-control" placeholder="Leave a comment here"
                                        id="discription" style="height: 120px;"><%= coupon.description %></textarea>
                                    <label for="floatingTextarea">Discription</label>
                                </div>
                                <div style="height: 10px;">
                                    <p id="message" style="color: red;font-size: 20px;"></p>
                                </div>
                                <br>
                                <button class="btn btn-primary">Submit</button>
                            </form>
                        </div>
                    </div>
                    <script>
                        let form = document.getElementById('form')
                        form.addEventListener('submit',(event)=>{
                            event.preventDefault()
                            const name = document.getElementById('name').value
                            const percentage = document.getElementById('percentage').value
                            const date = document.getElementById('date').value
                            const minAmount = document.getElementById('minAmount').value
                            const maxAmount = document.getElementById('maxAmount').value
                            const discription = document.getElementById('discription').value
                            const id = document.getElementById('id').innerHTML

                            console.log(discription)
                            const query = `name=${name}&percentage=${percentage}&expiredAt=${date}&minAmount=${minAmount}&maxAmount=${maxAmount}&description=${discription}&_id=${id}`
                            fetch(`/admin-couponEditCheck?${query}`)
                            .then(res => res.json())
                            .then(data => {
                                if(data.success){
                                    window.location.href=`/admin-couponEditSuccess?data=${encodeURIComponent(JSON.stringify(data.data))}`
                                } else if(data.message) {
                                    document.getElementById('message').innerHTML=data.message
                                    function hideParagraph() {
                                        document.getElementById('message').innerHTML = ''
                                    }
                                    setTimeout(hideParagraph, 3000)
                                    console.log(data.message)
                                }
                            })
            
                        })
                </script>

                    </div>
                </div>
            </div>
        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
